# ============================================
# OpenAI API 配置
# ============================================
OPENAI_BASE_URL="https://api.deepseek.com"
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="deepseek-chat"
OPENAI_IP_FAMILY=4
OPENAI_HTTP_TIMEOUT_MS=1200000 #20分钟
AI_CONCURRENCY="3"  # 并发数量
AI_DELAY_BETWEEN_MS="300" #请求间隔

# ============================================
# AI 批处理配置
# ============================================
AI_JSONL_PATH="ai/batch_all.jsonl"
AI_OUT_DIR="ai"
AI_BATCH_OUTPUT_PATH="ai/batch_output.jsonl"
COMPLETION_WINDOW="24h"

# ============================================
# AI 风格配置
# ============================================
# 风格：roast（孙笑川贴吧老哥毒舌风）/ normal（正常风格）
AI_STYLE="roast"
# 毒舌程度：1-5，默认 3
AI_ROAST_LEVEL=5

# ============================================
# 热点事件配置
# ============================================
HOT_EVENTS_LIMIT=6
AI_EVENT_MSG_LIMIT=40
AI_EVENT_PER_USER_CAP=6

# ============================================
# 月度主题配置
# ============================================
AI_MONTH_MSG_LIMIT=30

# ============================================
# 年度奖项配置
# ============================================
AI_AWARD_MSG_LIMIT=10

# ============================================
# 用户画像配置
# ============================================
# 生成画像的用户数量
AI_USER_PROFILE_LIMIT=6
# 每用户采样消息数
AI_USER_MSG_LIMIT=30

# ============================================
# 金句精选配置
# ============================================
AI_QUOTE_CANDIDATE_LIMIT=50

# ============================================
# 情感分析配置
# ============================================
AI_SENTIMENT_MSG_LIMIT=60
